<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.hyedesign.onedic.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/antonym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAntonym"
            android:layout_weight="0.5"
            style="@style/btn"
            android:onClick="redirect_onclick"/>

        <Button
            android:text="@string/synonym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSynonym"
            android:layout_weight="0.5"
            style="@style/btn"
            android:onClick="redirect_onclick"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/idioms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIdioms"
            android:layout_weight="0.5"
            style="@style/btn"
            android:onClick="redirect_onclick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnWords"
            android:layout_weight="0.5"
            style="@style/btn"
            android:onClick="redirect_onclick"/>

        <Button
            android:text="@string/verbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVerbs"
            android:layout_weight="0.5"
            style="@style/btn"
            android:onClick="redirect_onclick"/>

    </LinearLayout>


</LinearLayout>
